generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Project {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  imageUrl   String
  projectUrl String
  githubUrl  String
}

model User {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  email     String  @unique
  firstName String
  lastName  String?
  imageUrl  String?
  password  String  @unique
}

model Reminder {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  time    String
  content String
}
